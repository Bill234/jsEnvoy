{
  "name": "@jsenvoy/modules",
  "version": "0.0.1",
  "description": "Core infrastructure for building modular tool systems - base classes, dependency injection, and module management",
  "type": "commonjs",
  "main": "./src/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "jsenvoy",
    "modules",
    "tools",
    "infrastructure",
    "dependency-injection",
    "base-classes"
  ],
  "author": "Anand Sukumaran",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maxximus-dev/jsEnvoy.git",
    "directory": "packages/modules"
  }
}